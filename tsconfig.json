{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "esnext",
    "rootDir": ".",
    "declaration": true,             // Enable type declaration generation
    "emitDeclarationOnly": false,     // Emit only *.d.ts files
    "outDir": "dist",               // Directory the built content
    "allowJs": true,                 // Allow JavaScript files
    "checkJs": false,                 // Enable type checking in JavaScript
    "strict": true,                   // Ensure strict type checking,
    "esModuleInterop": true,
  },
  "include": ["src/**/*"],           // Specify the source files
  "exclude": ["node_modules", "dist"] // Exclude unnecessary files
}